<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox style="-fx-background-color: aqua;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controllers.BookARoom_StudentController">
   <children>
      <FlowPane alignment="CENTER">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Button fx:id="Bt_back" mnemonicParsing="false" onAction="#f_back" text="&lt;" />
                  <Label alignment="CENTER" contentDisplay="CENTER" styleClass="heading" stylesheets="/application/CSS/buttonIm.css" text="Book A Room">
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </FlowPane>
      <FlowPane alignment="CENTER" vgap="10.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Choose Day:">
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="CB_daysList" prefWidth="150.0" />
               </children>
               <FlowPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </FlowPane.margin>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Enter Capacity:">
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="Tx_capacity" alignment="CENTER" promptText="0" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Choose Timings:">
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="CB_timings" onAction="#f_setDuration" prefWidth="150.0" />
               </children>
               <FlowPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </FlowPane.margin>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Choose Duration:">
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                  </Label>
                  <ComboBox fx:id="CB_duration" prefWidth="150.0" />
               </children>
               <FlowPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </FlowPane.margin>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Enter Purpose/Course Acronym:">
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="Tx_purpose" />
               </children>
               <FlowPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </FlowPane.margin>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Label text="Chosen Venues">
                     <HBox.margin>
                        <Insets right="50.0" />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="L_venues" text=" ">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <ChoiceBox fx:id="CB_venues" prefWidth="150.0">
                     <HBox.margin>
                        <Insets left="10.0" right="10.0" />
                     </HBox.margin>
                  </ChoiceBox>
                  <Button fx:id="Bt_addSub" mnemonicParsing="false" onAction="#f_addSub" text="+/-">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <FlowPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </FlowPane.margin>
            </HBox>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </FlowPane>
      <StackPane>
         <children>
            <Button fx:id="Bt_submit" mnemonicParsing="false" onAction="#f_submit" text="Submit" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </StackPane>
      <FlowPane alignment="CENTER">
         <children>
            <Label fx:id="L_status" text="Book a Room if you need to :-)" />
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </FlowPane>
   </children>
   <stylesheets>
      <URL value="/application/CSS/login.css" />
      <URL value="/application/CSS/slogin.css" />
   </stylesheets>
</VBox>
