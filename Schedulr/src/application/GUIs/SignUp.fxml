<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" style="-fx-background-color: aqua;" stylesheets="/application/CSS/slogin.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controllers.SignUpController">
   <children>
      <HBox alignment="CENTER">
         <children>
            <Button fx:id="Bt_back" mnemonicParsing="false" onAction="#f_back" text="&lt;" />
            <Label alignment="CENTER" styleClass="heading" stylesheets="/application/CSS/buttonIm.css" text="Sign Up">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
      <TextField fx:id="Tx_fName" alignment="CENTER" promptText="First Name">
         <VBox.margin>
            <Insets left="100.0" right="100.0" top="70.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="Tx_lName" alignment="CENTER" promptText="Last Name">
         <VBox.margin>
            <Insets left="100.0" right="100.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <TextField fx:id="Tx_uName" alignment="CENTER" promptText="Email ID (IIITD Email only)">
         <VBox.margin>
            <Insets left="100.0" right="100.0" top="10.0" />
         </VBox.margin>
      </TextField>
      <PasswordField fx:id="Tx_pass" alignment="CENTER" promptText="Password">
         <VBox.margin>
            <Insets left="100.0" right="100.0" top="10.0" />
         </VBox.margin>
      </PasswordField>
      <ComboBox id="CB_User_Type" fx:id="CB_userType" prefHeight="26.0" prefWidth="180.0" promptText="Select User Type">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </ComboBox>
      <Button fx:id="Bt_submit" mnemonicParsing="false" onAction="#f_submit" text="Submit">
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Button>
      <Label fx:id="L_status" alignment="CENTER" contentDisplay="CENTER" styleClass="greet" stylesheets="/application/CSS/buttonIm.css" text="Get Ready for a revolutionary TimeTable Experience !!!">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </Label>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
